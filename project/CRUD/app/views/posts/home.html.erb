<h1>Posts#home</h1>
<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
    </tr>

    <% @posts.each do |post| %>
        <tr>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
            <td><a href="/posts/show/<%= post.id %>">show</a></td>
            <td><a href="/posts/edit/<%= post.id %>">edit</a></td>
            <td><a href="/posts/destroy/<%= post.id %>">destroy</a></td>
        </tr>
    <% end %>
</table>
